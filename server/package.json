{
  "name": "moltbot-voice-bridge-server",
  "version": "1.0.0",
  "description": "Voice PWA proxy server for Moltbot Voice Bridge - bridges PWA to Clawdbot Gateway",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --env-file=.env dist/index.js",
    "dev": "tsc --watch & nodemon dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:groq": "node dist/test-groq.js",
    "test:gateway": "node dist/test-gateway.js",
    "test:tts": "node dist/test-tts.js",
    "test:all": "node dist/test-all.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.30",
    "@types/ws": "^8.5.10",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
