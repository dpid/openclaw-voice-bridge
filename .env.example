# OpenClaw Voice Bridge - Server Configuration (Pipecat)
# Copy to .env and fill in values

# =============================================================================
# Required
# =============================================================================

# Secret you create to secure WebRTC signaling (any random string)
# Generate with: openssl rand -hex 16
OC_AUTH_TOKEN=

# =============================================================================
# Gateway Connection
# =============================================================================

# OpenClaw Gateway HTTP endpoint for chat completions
# GATEWAY_URL=http://localhost:18789

# OpenClaw session key (default shares context with CLI)
SESSION_KEY=agent:main:main

# =============================================================================
# Server
# =============================================================================

# Server port (WebRTC signaling + static files)
PORT=7860

# Allowed CORS origins (comma-separated, defaults to localhost + GitHub Pages)
# ALLOWED_ORIGINS=http://localhost:5173,https://yourusername.github.io

# =============================================================================
# Branding (optional - defaults to OpenClaw)
# =============================================================================

# Assistant name shown in UI
ASSISTANT_NAME=OpenClaw

# Emoji shown in UI
ASSISTANT_EMOJI=ðŸ¦ž

# =============================================================================
# TTS Provider
# =============================================================================

# Use local Chatterbox instead of ElevenLabs
# CHATTERBOX_URL=http://localhost:8880

# Chatterbox voice name
# CHATTERBOX_VOICE=default

# =============================================================================
# API Keys (optional - normally read from openclaw.json)
# =============================================================================

# Override Groq API key
# GROQ_API_KEY=your-groq-key

# ElevenLabs API key (fallback TTS)
# ELEVENLABS_API_KEY=your-elevenlabs-key
# ELEVENLABS_VOICE_ID=your-voice-id
